<div class="row justify-content-center">
  <div class="col-lg-5 pt-2">
    <div class="panel  ">
      <div class="panel-title">
        <h3 class="panel-title text-center">Войти</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= f.label :email, class: "text-muted mt-2 mb-0" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>

          <%= f.label :пароль, class: "text-muted mt-2 mb-0" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>

          <% if devise_mapping.rememberable? %>
            <div class="mt-3">
              <%= f.check_box :remember_me %>
              <%= f.label :запомнить_меня, class: "text-muted mt-0" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Войти", class: 'btn btn-outline-info mt-1' %>
          </div>
        <% end %>
      </div><!--panel-->
    </div>
  </div>
</div>
