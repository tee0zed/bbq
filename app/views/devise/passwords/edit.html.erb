<div class="row justify-content-center">
  <div class="col-lg-6 pt-2">
    <div class="panel">
      <div class="panel-title">
        <h3 class="panel-title text-center">Сменить пароль.</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

          <%= f.hidden_field :reset_password_token %>

          <%= f.label :password, class: ' text-muted mb-0 mt-3' %>
          <%= f.password_field :password, autocomplete: "new-password", class:'form-control pt-2' %>


          <%= f.label :password_confirmation, class: 'text-muted mb-0 mt-3' %><br />
          <% if @minimum_password_length %>
            <em class="text-muted"><%= @minimum_password_length %> символов минимум.</em>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control pt-2' %>


          <div class="actions">
            <%= f.submit "Сменить пароль", class: 'mt-3 btn btn-outline-warning text-dark'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

