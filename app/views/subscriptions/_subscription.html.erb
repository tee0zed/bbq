<li class="mb-1">
  <% if subscription.user.present? %>
    <%= render partial: 'users/user', object: subscription.user %>
  <% else %>
    <em><%= subscription.user_name %></em>
  <% end %>
  <% if current_user_can_edit?(subscription) || current_user_can_edit?(@event) %>
    <%= link_to(
            fa_icon('times'),
            event_subscription_path(subscription.event, subscription),
            method: :delete,
            data: {confirm: t('helpers.controllers.subscriptions.destroy_confirm')}
        ) %>
  <% end %>
</li>