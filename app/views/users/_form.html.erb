
<%= form_for @user, html: {multipart: true} do |f| %>
  <div class="form-group">
    <%= f.label :Имя, class:'text-muted ' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, class:'text-muted ' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, class:'text-muted' %>
    <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-outline-info' %>
    или <%= link_to 'вернуться', root_path %>
  </div>
<% end %>