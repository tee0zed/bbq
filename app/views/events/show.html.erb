<div class="alert-container">
  <%= render partial: 'devise/shared/error_messages', locals: { resource: @new_comment || @event.comments.build }  %>
  <%= render partial: 'devise/shared/error_messages', locals: { resource: @new_subscription || @event.subscriptions.build }  %>
</div>
<div class="event">
  <div class="event-info row">
    <div class="col-lg-8">
      <div class="row">
        <%= content_tag 'div', '', class: 'event-background event-card',
                        style: "background-image: url(#{path_to_asset('event.jpg')})" %>
        <div class="p-4 w-100">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= @event.datetime %></h3>
            <h3><small><%= link_to @event.address, "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>
          <div class="row row-event">
            <div class="col-lg-6">
            <% if current_user_can_edit?(@event) %>
              <div class="actions">
                <%= link_to 'Изменить', edit_event_path(@event), class: 'btn btn-outline-warning' %>
                <%= link_to 'Удалить', event_path(@event),method: :delete, class: 'ml-2 btn btn-outline-danger', data: { confirm: "Удалить событие?" } %>
              </div>
            <% end %>
            </div>
            <div class="col-lg-6">
              <div class="float-right pt-2 pr-3"> <%= link_to @event.user.name, user_path(@event.user), class: "text-light" %> </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="ml-5 col-lg-3">
      <div class="text-left text-muted">
        <h5>Пойдут:</h5>
        <div>
          <ul class="pl-3 pt-2 pb-2">
            <%= render partial: 'subscriptions/subscription', collection: @event.subscriptions.except(@new_subscription) %>
          </ul>
        </div>
      </div>
      <div class="text-left text-muted overflow-auto mh-50">
        <div class="event-owner">
          <h5>Зовет:</h5>
          <p><%= render partial: 'users/user', object: @event.user %></p>
        </div>
        <% unless current_user_can_edit?(@event) %>
          <h5>Я пойду:</h5>
          <div>
            <%= render partial: 'subscriptions/form', locals: { subscription: @new_subscription || @event.subscriptions.build } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="event-comments buffer-top">
          <%= render partial: 'comments/form', locals: {comment: @new_comment || @event.comments.build} %>
        <div class="buffer-both">
          <%= render partial: 'comments/comment', collection: @event.comments.except(@new_comment) %>
        </div>
      </div>
    </div>
  </div>
</div>